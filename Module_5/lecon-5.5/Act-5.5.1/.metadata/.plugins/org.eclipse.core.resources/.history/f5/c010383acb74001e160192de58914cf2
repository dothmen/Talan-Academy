package steps;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import pages.loginpage;

public class loginSteps {

	 WebDriver driver;
	 loginpage login;
	 
@Given("user in login  page")
public void user_in_login_page() {
	System.setProperty("webdriver.chrome.driver", "src\\test\\resources\\divers\\chromedriver.exe") ;
	  driver=new ChromeDriver();
	  driver.navigate().to("https://login.decathlon.net/?client_id=2f1c6e03-bcd7-41cc-88e5-5e359f3c4bd0&ui_locales=fr_FR");
	  driver.manage().window().maximize();
	  
}

@When("^user enters(.*)$")
public void user_enters_email(String Email) {
	 System.out.println("inside Step-user enters email ");
	   login = new loginpage (driver);
	   login.enterEmail(Email);
}
@When("^user enters(.*)$")
public void user_enters_invalid_Email(String Email) {
	 System.out.println("inside Step-user enters invalid email ");
	   login = new loginpage (driver);
	   login.enterEmail(Email);
}
@And("clicks on login  button")
public void clicks_on_login_button() {
	System.out.println("inside step_user enters email ");
	   login.clicknextbutton();

}

@And("^user enters(.*)$")
public void user_enters_password(String Password) {
	 System.out.println("inside Step-user enters password");
	   login = new loginpage (driver);
	   login.enterPassword(Password);
}

@And("^user enters(.*)$")
public void user_enters_invalid_Password(String Password) {
	 System.out.println("inside Step-user enters invalid password");
	   login = new loginpage (driver);
	   login.enterPassword(Password);
}
@When("clicks on validate button")
public void clicks_on_validate_button() {
	System.out.println("inside step_user enters email and password ");
	   login.clickvalidatebutton();

}


@Then("user is navigated to the home page")
public void user_is_navigated_to_the_home_page() {
	login.checktext();
}



}
