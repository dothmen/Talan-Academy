package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class loginpage {
	
	WebDriver driver;
	By txt_email = By.xpath("//input[@id='input-email']");
	By btn_next = By.xpath("//button[@id='lookup-btn']");
	By txt_password = By.name("//input[@id='input-password']");
	By btn_validate = By.xpath("//button[@id='signin-button']");
	By textvalidemail = By.xpath("/html/body/div[1]/div[2]/div/div[1]/form/div[1]/div/div[2]/div[2]/p");
	By textinvalidpassword= By.xpath("/html/body/div[1]/div[2]/div/div[1]/form/div[2]/div[2]/p");
	public loginpage(WebDriver driver) {
		this.driver = driver ;
	}

	public void enterEmail(String Email) {
	 driver.findElement(txt_email).sendKeys(Email);
	}
	public void clicknextbutton() {
		driver.findElement(btn_next).click();
	}
	public void enterPassword(String Password) {
		driver.findElement(txt_password).sendKeys(Password);

	}
	
	public void clickvalidatebutton() {
		driver.findElement(btn_validate).click();
	}
	public void textvalidemail() {
		driver.findElement(textvalidemail).isDisplayed();
	
	}

	public void textinvalidpassword() {
		driver.findElement(textinvalidpassword).isDisplayed();
	
	}
}
